@model IEnumerable<ArticleModel>
@{
    var separator = ViewData["separator"] as string;
}
@foreach (var form in Model)
{
    @Html.ActionLink(form)

    @if (form.Note != null)
    {
        <text> (@Html.RenderWikiMarkup(form.Note))</text>
    }

    @if (form.StandardizedForm != null)
    {
        <text> (&lt @Html.ActionLink(form.StandardizedForm))</text>
    }

    @if (Model.Last() != form)
    {
        @if (!string.IsNullOrWhiteSpace(separator))
        {
            <text>@separator</text>
        }
        else
        {
            <text>, </text>
        }        
    }
}